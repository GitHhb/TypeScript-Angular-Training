{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "echo",
            "command": "echo",
            "isShellCommand": true,
            "args": [
                "Hello World"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "tsc",
            "command": "node_modules\\.bin\\tsc",
            "args": ["-w", "index.ts"],
            "isShellCommand": true,
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "start",
            "command": "npm",
            "args": ["start"],
            "isShellCommand": true,
            "isBackground": true
        },
        {
            "taskName": "build",
            "command": "gulp",
            "args": ["build"],
            "isShellCommand": true
        }
    ]
}